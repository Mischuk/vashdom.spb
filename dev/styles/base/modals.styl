.modal
  padding 0
  text-align left
  max-width 280px
  margin 40px auto
  position relative
  box-shadow 0 0 10px rgba(0,0,0,0.25)
  @media screen and (max-width: 420px)
    padding-left 10px
    padding-right 10px
  .form-title
    text-align center
  .default-form
    overflow hidden
  .mfp-close
    border none
    display block
    opacity 1 !important
    right -40px
    top 0
    width 30px
    height 30px
    &:after
      content 'Ã—'
      width 100%
      height 100%
      line-height 30px
      color #fff
      font-size 25px
      background #e6e7e8
      color #000
      position absolute
      left 50%
      top 50%
      margin-left -(@width/2)
      margin-top -(@height/2)
      border-radius 50%
      opacity .8
    &:hover:after
      opacity 1
  .success-message
    color $sky
    font-weight: bold;
    font-size: 21px;
    text-align: center;
    padding-bottom: 50px;
    padding-top: 50px;