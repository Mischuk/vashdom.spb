.default-form
  .form-title
    margin-bottom 20px
    padding 10px 0
    font-size 15px
    line-height 1
    border-radius 3px 3px 0 0
    background #e6e7e8
    font-weight bold
  .form-text
    font-size 13px
    color #6d6e71
    text-align left
    margin 0
  .row
    position relative
    padding 0 15px
    margin-bottom 20px
    &.compact
      padding-left 5px
      padding-right 5px
    &:last-child
      margin-bottom 20px
    .error-list
      color $red
      font-size 12px
      line-height 1
      width 100%
      position absolute
      left 0
      bottom -16px
      padding-left 10px
      padding-right 10px
      text-align center
  .default-input-label
    display inline-block
    vertical-align middle
    height 30px
    line-height 30px
    color #494949
    font-size 15px
    width 65px
    text-align left
    &.error
      color $red
  .default-input
    display inline-block
    vertical-align middle
    height 30px
    line-height 30px
    width 180px
    border 1px solid $border
    padding 0 10px
    &.error
      border-color $red
    &:focus
      border-color $border-focus
  .options
    height 30px
    line-height 30px
    font-size 13px
    a
      color $sky
    .remember
      float left
      label
        display inline-block
        vertical-align middle
        height 30px
        line-height 30px
        span
          display inline-block
          vertical-align middle
          line-height 30px
          vertical-align top
    .forgot
      float right
      a
        &:hover
          text-decoration underline
  .signup-link
    font-size 13px
    a
      font-weight bold
      color $black
      text-decoration underline
      &:hover
        text-decoration none
        color $sky
  .success-title
    color $sky
    font-size 15px
  .success-manager
    margin 15px 0
    font-weight bold
    color $sky
    font-size 16px
  .success-if-error
    font-size 11px
  .success-tel
    margin-top 10px
    a
      color $sky
      font-weight bold
      font-size 24px
      cursor default
.signin-form,
.forgot-form,
.success-form,
.signup-form,
.techcallback-form
  width 280px
  background $white
  box-shadow 0 0 10px rgba(0,0,0,.25)
  border-radius 3px
  display inline-block
  vertical-align middle
  position relative
  z-index 10

.forgot-form
  .default-input
    width 100%

.techcallback-form
  .textarea
    font-family 'PT Sans', sans-serif
    font-size 15px
    line-height 1.1
    width 100%
    min-height 120px
    max-height 200px
    padding-top 10px
    padding-bottom 10px


#reserve-modal
  max-width 540px
.reveserve-form
  width 540px
  background $white
  box-shadow 0 0 10px rgba(0,0,0,.25)
  border-radius 3px
  display inline-block
  vertical-align middle
  position relative
  z-index 10
  .columns
    clearfix()
    .column
      float left
      width 50%
  .default-input-label
    &.half
      line-height 1
  .default-input
    width 170px
  .sumo_form-reserve-pay,
  .filter-button,
  .upload
    width 170px
    display inline-block
    vertical-align middle
  .sumo_form-reserve-pay
    .optWrapper .options
      height 154px
      .opt
        padding-top 0
        padding-bottom 0
  .filter-button
    a
      position relative
      display block
      line-height 28px
      height 30px
      padding-left 5px
      border 1px solid #e6e7e8
      color #494949
      &:after
        content ''
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 4px 4px 0 4px;
        border-color: #939598 transparent transparent transparent;
        position absolute
        right 10px
        top 50%
        margin-top -1px
  .upload
    position relative
    overflow hidden
    min-height 30px
    line-height 30px
    cursor pointer
    .uploaded
      display none
      background #e6e7e8
      text-align center
      position relative
      z-index 20
      cursor default
      &.show
        display block
      #form-reserve-upload-item
        padding-right 15px
      #form-reserve-upload-clear
        position absolute
        right 0
        top 0
        width 30px
        height 30px
        text-align center
        cursor pointer
    .input-file-title
      position relative
      display block
      width 100%
      height 30px
      text-align center
      cursor pointer
      &:after
        content '+'
        height 30px
        position absolute
        right 10px
        top 0

    input
      position absolute
      top 0
      right 0
      margin 0
      padding 0
      font-size 20px
      cursor pointer
      opacity 0
      height 100%