select
  opacity 0
.SumoSelect
  width 200px
  display inline-block
  position relative
  outline none
  p
    margin 0
  .hidden
    display none
  .search-txt
    display none
    outline none
  .no-match
    display none
    padding 6px
  &.open
    .search-txt
      display inline-block
      position absolute
      top 0
      left 0
      width 100%
      margin 0
      padding 5px 8px
      border none
      -webkit-box-sizing border-box
      -moz-box-sizing border-box
      box-sizing border-box
      border-radius 5px
    & > .optWrapper
      top 35px
      display block
      &.up
        top auto
        bottom 100%
        margin-bottom 5px
  & > .CaptionCont
    position relative
    border 1px solid #e6e7e8
    min-height 30px
    background-color #fff
    border-radius 2px
    margin 0
    overflow hidden
    & > span
      display block
      padding-right 30px
      text-overflow ellipsis
      white-space nowrap
      overflow hidden
      cursor default
      line-height 30px
      min-height 30px
      &.placeholder
        color #ccc
        font-style italic
        font-size 13px
        line-height 30px
    & > label
      position absolute
      top 0
      right 0
      bottom 0
      width 30px
      & > i
        background-position center center
        width 18px
        height 14px
        display block
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        margin auto
        background-repeat no-repeat
        opacity 0.8
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 4px 4px 0 4px;
        border-color: #939598 transparent transparent transparent;
  & > .optWrapper
    display none
    z-index 1000
    top 30px
    width 100%
    position absolute
    left 0
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    background #fff
    border 1px solid #ddd
    box-shadow 2px 3px 3px rgba(0, 0, 0, 0.11)
    border-radius 3px
    overflow hidden
    ul
      list-style none
      display block
      padding 0
      margin 0
      overflow auto
    & > .options
      border-radius 2px
      position relative
      max-height 250px
      li
        &.group
          &.disabled
            & > label
              opacity 0.5
          & > label
            cursor default
            padding 8px 6px
            font-weight bold
        ul
          li
            &.opt
              padding-left 22px
        &.opt
          padding 6px 6px
          position relative
          border-bottom 1px solid #f5f5f5
          &:hover
            background-color #E4E4E4
          &.sel
            background-color #a1c0e4
            border-bottom 1px solid #a1c0e4
          &.disabled
            background-color inherit
            pointer-events none
            *
              -moz-opacity 0.5
              -khtml-opacity 0.5
              opacity 0.5
        label
          text-overflow ellipsis
          white-space nowrap
          overflow hidden
          display block
          cursor pointer
        span
          display none
        &.optGroup
          padding-left 5px
          text-decoration underline
      & > li
        &.opt
          &:first-child
            border-radius 2px 2px 0 0
          &:last-child
            border-radius 0 0 2px 2px
            border-bottom none
    &.multiple
      & > .options
        li
          ul
            li
              &.opt
                padding-left 50px
          &.opt
            padding-left 35px
            cursor pointer
      &.isFloating
        padding-bottom 43px
        & > .MultiControls
          display block
          margin-top 5px
          position absolute
          bottom 0
          width 100%
        & > .options
          li
            &.opt
              padding-left 35px
      &.okCancelInMulti
        & > .MultiControls
          display block
          & > p
            padding 6px
      & > .MultiControls
        & > p
          display inline-block
          cursor pointer
          padding 12px
          width 50%
          box-sizing border-box
          text-align center
          &:hover
            background-color #f1f1f1
          &.btnOk
            border-right 1px solid #DBDBDB
            border-radius 0 0 0 3px
          &.btnCancel
            border-radius 0 0 3px 0
    &.isFloating
      position fixed
      top 0
      left 0
      right 0
      width 90%
      bottom 0
      margin auto
      max-height 90%
      & > .options
        max-height 100%
        box-shadow 0 0 100px #595959
        li
          &.opt
            padding 12px 6px
    & > .MultiControls
      display none
      border-top 1px solid #ddd
      background-color #fff
      box-shadow 0 0 2px rgba(0, 0, 0, 0.13)
      border-radius 0 0 3px 3px
  &.disabled
    opacity 0.7
    cursor not-allowed
    & > .CaptionCont
      border-color #ccc
      box-shadow none
  .select-all
    border-radius 3px 3px 0 0
    position relative
    border-bottom 1px solid #ddd
    background-color #fff
    padding 8px 0 3px 35px
    height 20px
    cursor pointer
    &.partial
      & > span
        i
          background-color #ccc

.SelectBox
  padding 0 5px

.sumoStopScroll
  overflow hidden

.SumoSelect.open>.search>span, .SumoSelect.open>.search>label
  visibility hidden

.SelectClass,.SumoUnder
  position absolute
  top 0
  left 0
  right 0
  height 100%
  width 100%
  border none
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
  -moz-opacity 0
  -khtml-opacity 0
  opacity 0

.SelectClass
  z-index 1

.SumoSelect > .optWrapper > .options  li.opt label, .SumoSelect > .CaptionCont,.SumoSelect .select-all > label
  user-select none
  -o-user-select none
  -moz-user-select none
  -khtml-user-select none
  -webkit-user-select none

