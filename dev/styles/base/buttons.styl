// Mobile burger button
.mobile-menu-trigger
  display none
  position absolute
  left 10px
  top 50%
  width 32px
  height 22px
  margin-top -(@height/2)
  @media screen and (max-width: 700px)
    display block
  &:after,
  &:before,
  span
    anim()
    content ''
    position absolute
    left 0
    width 100%
    height 3px
    background #606060
  &:before
    top 0
  &:after
    bottom 0
  span
    top 50%
    margin-top -1.5px
  &.open
    span
      opacity 0
      transform translateX(-5px)
    &:after
      transform: rotate(135deg) translate(-7px, 7px)
    &:before
      transform: rotate(-135deg) translate(-6px, -6px)


.button-sky
  color $white
  background $sky
  display block
  width 215px
  height 35px
  font-size 15px
  border none
  line-height 35px
  text-align center
  margin-left auto
  margin-right auto
  border-radius 3px
  box-shadow 1px 1px 2px rgba(0,0,0,.25)
  transition background .25s ease-in, box-shadow .25s ease-in
  &:hover
    background $sky - 5%
  &:active
    position relative
    top 1px
    box-shadow inset 1px 1px 3px rgba(0,0,0,.35), 0px 2px 1px -1px rgba(0,0,0,.15)
    background $sky - 10%