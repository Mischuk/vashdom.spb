.m_header
  position relative
  z-index 1
  border-bottom 1px solid $sky
  box-shadow 0 0 10px rgba(0,0,0,.15)
  height 100px
  background #fff
  &.fixed
    position absolute
    left 0
    top 0
    width 100%
  @media screen and (max-width: 460px)
    height 140px
  .logo
    float left
    width 161px
    height 50px
    margin 25px 0
    @media screen and (max-width: 460px)
      float none
      margin 10px auto
    a
      display block
      width 100%
      height 100%
      background url("../images/logo.png") no-repeat 0 0
      background-size cover
  .contacts
    float right
    height 100%
    @media screen and (max-width: 460px)
      height auto
      float none
      text-align center
    .tel
      a
        font-weight bold
        font-size 25px
        color $sky
        text-decoration none
        cursor default
    .callback
      text-align center
      margin-top 5px
      a
        position relative
        display inline-block
        vertical-align middle
        font-size 15px
        padding-left 30px
        color $black
        &:after
          content ''
          background: url('../images/sprite.png') no-repeat -26px 0;
          width: 20px;
          height: 20px;
          position absolute
          left 0
          top 50%
          margin-top -(@height/2)
        &:hover
          color $sky
          text-decoration underline
