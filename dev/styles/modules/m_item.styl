.m_item
  background #fff
  width 580px
  max-width 580px
  border-radius 5px
  padding-left 15px
  padding-right 15px
  min-height 685px
  padding-bottom 90px
  .mfp-close
    display none
  .tabs-item-content,
  .estate-tabs-item-content
    .tabs-item-block,
    .estate-tabs-item-block
      display none
      &.current
        display block
  .layout-item-block
    display none
    padding-left 5px
    padding-right 10px
    img
      width 100%
    &.current
      display block
  .header
    margin-bottom 10px
  .header,
  .layout-item-nav
  .estate-tabs-item-nav
    padding 10px 0
    cursor default
    a
      display inline-block
      vertical-align middle
      padding 5px
      font-size 13px
      line-height 1
      border-radius 3px
      color #000
      &.current
        background $sky
        color #fff
  .footer
    clearfix()
    position absolute
    left 0
    bottom 0
    width 100%
    padding-bottom 15px
    cursor default
    margin-top 15px
    padding-left 15px
    padding-right 15px
    .left,
    .right
      border-top 1px solid #808285
      padding-top 15px
    .left
      float left
      width 180px
      .bottom
        margin-top 5px
      .pdf
        display inline-block
        vertical-align middle
        a
          background #a7aaac
          color #fff
          &:hover
            background #a7aaac - 5%
          &:active
            background #a7aaac - 10%
      .print
        display inline-block
        vertical-align middle
        a
          display block
          margin-left 10px
          background: url('../images/sprite.png') no-repeat -119px -1px;
          width: 14px;
          height: 14px;
    .right
      float right
      width 370px
      text-align right
      .cancel
        display inline-block
        vertical-align middle
      .submit
        display inline-block
        vertical-align middle
        a
          display inline-block
          vertical-align middle
          padding-left 10px
          padding-right 10px
  .layout-item-nav
    position absolute
    left 10px
    top -44px
    padding-left 20px
    background #ededed
    border-radius 3px
    padding-top 0
    padding-bottom 0
    padding-left 0
    padding-right 0
    width auto
    display inline-block
    vertical-align middle
  .columns
    clearfix()
    .column
      position relative
      &:first-child
        float left
        width 280px
      &:last-child
        width 250px
        float right
  .row
    margin-bottom 5px
    .small-column
      float left
      width 50%
      &:first-child + .small-column
        .label
          padding-left 10px
      .value
        width 75px

  .label
    float left
    width 65px
    color #808285
    font-size 13px
    line-height 30px
    cursor default
    &.large
      width 75px
      & + .value
        width 205px
  .value
    float right
    width 215px
    background #f1f1f2
    color #6d6e71
    border-radius 3px
    font-size 13px
    line-height 13px
    padding 8px 5px

  // Complex
  .complex-article
    font-size 13px
    color #939598
    p
      margin-top 0
      &:last-child
        margin-bottom 0
  .complex-info,
  .complex-date
    padding-bottom 15px
    margin-bottom 15px
    border-bottom 1px solid #808285
  .complex-date
    .heading
      font-weight bold
      margin-bottom 10px
    .date,
    .status
      float left
      background #f1f1f2
      color #6d6e71
      border-radius 3px
      font-size 13px
      line-height 13px
      padding 8px 5px
      margin-right 5px
    .queue
      float right
      width 80px
      text-align right
      .label,
      .value
        width auto
        float right
      .label
        padding-right 5px
  .estate
    .details,
    .squares
      padding-bottom 15px
      // margin-bottom 15px
      border-bottom 1px solid #808285
    .squares
      .heading
        margin-bottom 15px
        margin-top 5px
      .column
        width 25%
        float left
        .label
          padding-left 15px
        &:first-child .label
          padding-left 0
        .value
          width 70px
    .payed
      text-align right
      .col
        clearfix()
        display inline-block
        vertical-align middle
        .label
          padding-right 10px
          margin-left 15px
        .value
          width 70px
        .bonus
          font-size 13px
          line-height 30px
          color #808285
    .variant-payed
      .column
        display inline-block
        float left
        width auto
        .row
          &:last-child
            margin-bottom 0
        .label
          width 80px
        .value
          width 30px
          text-align center
        &:last-child
          padding-left 55px
          .label
            width 100px
          .value
            min-width 30px
            width auto
            float left
    .stuff
      .column
        width 50%
        .row
          &:last-child
            margin-bottom 0
        .label
          width 85px
        .value
          width 165px
          float left
        &:last-child
          text-align right
          .label,
          .value
            float none
            display inline-block
            vertical-align middle
          .label
            width 110px
          .value
            width 130px
  .mortgage
    .list
      clearfix()
      .image
        width 25%
        height 70px
        line-height 70px
        margin-bottom 20px
        float left
        text-align center
        img
          display inline-block
          vertical-align middle
          max-width 100%
          max-height 100%
    .mortgage-bonus
      position absolute
      left 0
      bottom 90px
      font-size 13px
      color $sky
      width 100%
      padding-left 15px
      padding-right 15px
      padding-bottom 15px
      p
        margin 0
        color #939598