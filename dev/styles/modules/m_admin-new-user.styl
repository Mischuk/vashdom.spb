.m_admin-new-user
  max-width 770px
  .new-user-form
    width 770px
    background $white
    box-shadow 0 0 10px rgba(0,0,0,.25)
    border-radius 3px
    display inline-block
    vertical-align middle
    position relative
    z-index 10
    .form-footer
      text-align right
      padding-right 50px
      input
        display inline-block
        vertical-align middle
        width auto
        &.submit
          padding-left 30px
          padding-right 30px
        &.cancel
          padding-left 15px
          padding-right 15px
    .form-title
      font-size 15px
      line-height 1
      text-align left
      padding-left 15px
    .columns
      clearfix()
      padding-left 50px
      padding-right 50px
      .inputs
        float left
        width 60%
        input
          width 80%
        .row
          position relative
          padding-left 120px
        .default-input-label
          position absolute
          left 0
          top 0
          width 120px
      .image
        float right
        width 40%
        border 1px solid $text
        border-radius 5px
        height 280px
        text-align center
        a
          color $text
          text-decoration underline
          &:hover
            color $sky
